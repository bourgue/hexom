<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <link rel="icon" type="image/png" href="/img/favicon.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="/sass/main.css"/>
    <link rel="stylesheet" href="/sass/signinup.css"/>

    <script src="/js/jquery.min.js"></script>

    <title id="title_signin">Hexom</title>
  </head>
  <body>
    <div id="flagContainer" style="position:absolute; right:5px; top:0;"><img src="/img/us.png" id="en" class="flag" onclick="changeLang(this.id);"/><img src="/img/fr.png" class="flag" id="fr" onclick="changeLang(this.id);" style="margin-left:5px;"/></div>

    <div class="container">
      <div class="row">
        <img src="/img/logo_medium.png" id="logo"/>
        <div class="col-xs-8 col-xs-offset-2">
          <h2 id="conn"></h2>
          <form action="/login" method="post">
            <div class="form-group">
              <label id="username_lbl"></label>
              <input type="text" class="form-control textbox" name="username" maxlength="20">
            </div>
            <div class="form-group">
              <label id="password_lbl"></label>
              <input type="password" class="form-control textbox" name="password" maxlength="20">
            </div>

            <button type="submit" class="button" id="signin_button">Se connecter</button>
            <% if (message.length > 0) { %>
              <p id="<%= message %>" class="error"></p>
            <% } %>

            <p style="margin-top: 10px;">
              <label id="noacc"></label>
              <a href="/signup" id="signup"></a>
            </p>
          </form>
        </div>
      </div>
    </div>

    <a target="_blank" href="https://github.com/leobourgue/hexom" id="github_link"><div id="github_button"></div></a>

    <script src="/js/Language.js"></script>
    <script>
      var langMan = new LangManager();
      langMan.navigatorLang();
      langMan.setLanguage();
      function changeLang(lang) {
        langMan.language = lang;
        langMan.setLanguage();
      }
    </script>
  </body>
</html>
